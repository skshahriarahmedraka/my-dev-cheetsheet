  "editor.fontSize": 16,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": true,
    "go": true
  },
  "redhat.telemetry.enabled": true,
  "svelte.enable-ts-plugin": true,
  "tailwindCSS.includeLanguages": {
    "plaintext": "svelte"
  },
  "update.mode": "start",
  "psi-header.templates": [],
  "psi-header.config": {},
  "psi-header.variables": [],
  "vs-kubernetes": {
    "vscode-kubernetes.helm-path.linux": "/home/raka/.local/state/vs-kubernetes/tools/helm/linux-amd64/helm",
    "vscode-kubernetes.kubectl-path.linux": "/home/raka/.local/state/vs-kubernetes/tools/kubectl/kubectl",
    "vscode-kubernetes.minikube-path.linux": "/home/raka/.local/state/vs-kubernetes/tools/minikube/linux-amd64/minikube"
  },
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.startupEditor": "none",
  "editor.inlineSuggest.enabled": true,
  "window.menuBarVisibility": "toggle",
  "workbench.editor.enablePreview": false,
  "svelte.plugin.svelte.useNewTransformation": false,
  "svelte.plugin.svelte.note-new-transformation": false,
  "[svelte]": {},
  "workbench.colorTheme": "Atom One Dark",
  "security.workspace.trust.untrustedFiles": "open",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.autocompleteUnimportedPackages": true,
  "[python]": {
    "editor.formatOnType": true
  },
  "search.useReplacePreview": false,
  "git.openRepositoryInParentFolders": "always",

  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    },
    {
      "key": "ctrl+a",
      "command": "editor.action.selectAll",
      "when": "editorTextFocus"
    },
    {
      "before": ["<C-a>"],
      "commands": [
        {
          "command": "editor.action.selectAll",
          "args": []
        }
      ]
    },
    {
      "before": ["<C-c>"],
      "commands": [
        {
          "command": "editor.action.clipboardCopyAction",
          "args": []
        }
      ]
    }
    // {
